            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".telas.Tela_DetalheOrcamento" />
        <activity android:name=".telas.Tela_MeusEnderecos" />
        <activity android:name=".telas.Tela_Configuracao" />
        <activity android:name=".telas.ActBaixaDiaristas" />

