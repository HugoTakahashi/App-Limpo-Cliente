        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/SemBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SelecionarEnderecoActivity" />
        <activity android:name=".activity.SelecionarServicoActivity" />
        <activity android:name=".telas.TelaSDataServico" />
        <activity android:name=".telas.TelaSExibeDiarista" />
        <activity android:name=".telas.TelaSConfirmacaoServico" />
        <activity android:name=".telas.TelaDadosPessoais" />
        <activity android:name=".activity.InicialActivity"
            android:label="@string/title_activity_tela_inicial"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.FormularioClienteActivity" />
        <activity android:name=".telas.TelaCadastroEndereco" />
        <activity android:name=".telas.Tela_Historico" />

        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
